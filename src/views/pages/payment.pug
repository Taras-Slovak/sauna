extends ../layouts/default

block variables
	- const title = "Payment";

block links
	link(rel="stylesheet" href="styles/payment.css")

block content

	header.header
		.header__nav
			.header__link 
				p Оплата заказа


	main.main 
		.main__inner
			.main__content 
				.main__left 
					h3 Оплата банковской картой
					h2 3 400 грн.
				
					.main__field-group

						.main__field
							label(for="card-id") Номер карты
							input(type="text" placeholder="0000 0000 0000 000" id='card-id') 
							

						.main__card-data

							.main__field
								label(for="card-date") Срок действия
								input(type="text" placeholder="мм / гг" id="card-date") 

							.main__field 
								label(for="CVC") CVC код
								input(type="text" placeholder="CVV / CVC" id="CVC") 

						.main__radio 						
							input(type="checkbox", id="save-card"  name="save-card")
							label(for="save-card") Сохранить карту
							button.main__radio-popover(type='button' data-bs-toggle="popover" data-bs-trigger="hover" data-bs-content="<p> С понедельника по пятницу с 9:00 до 17:00 - 3 часа отдыха: </p> <span> 700 грн. в усадьбе, </span>  <span> 800 грн. в срубе </span>" )
