									<clipPath id="clip0_634_20661">
									<rect width="20" height="20" fill="white"/>
									</clipPath>
									</defs>
								</svg>	
				.main__right 

					h3.main__right-title Мы принимаем

					.main__credit-group

						a(href="#").main__credit-item
