mixin card(status,rating,cancel,book)
  .booking-list__card
    .booking-list__card-left
      img(src="img/card/some.webp", alt="some")
    .booking-list__card-right      
      .booking-list__card-top
        h4.booking-list__card-title Баня «Емеля» (сруб «Гусарский») 
        p.booking-list__card-price 6 000 грн.
      .booking-list__card-middle
        .booking-list__card-date
          p 21 июня 2021 
          p 19:00 - 23:00           
        p.booking-list__card-status=status
      .booking-list__card-line
      .booking-list__card-bottom
        a.booking-list__card-rating(href="#" class=rating)
